FROM node:20-alpine

# Create app directory
WORKDIR /app

# Install deps first (use package-lock if present)
COPY package*.json ./
RUN npm install

# Copy source
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run vite in host mode so it's reachable from the host machine
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
